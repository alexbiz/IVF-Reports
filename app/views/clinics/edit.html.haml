%h1 Edit Your Clinic's Info

.clinic_edit
= form_for @clinic do |clinic|
 %h3 Address
 %table
  %tr
   %td.label 
    = clinic.label :address
   %td.value	
    = clinic.text_field :address
  %tr
   %td.label 
    = clinic.label :city
   %td.value	
    = clinic.text_field :city
  %tr
   %td.label 
    = clinic.label :state
   %td.value	
    = clinic.text_field :state
  %tr
   %td.label 
    = clinic.label :zip
   %td.value	
    = clinic.text_field :zip
 %br
	
 %h3 Directors
 %table
  %tr
   %td.label 
    = clinic.label :practice_director
   %td.value	
    = clinic.text_field :practice_director
  %tr
   %td.label 
    = clinic.label :medical_director
   %td.value	
    = clinic.text_field :medical_director
  %tr
   %td.label 
    = clinic.label :laboratory_director
   %td.value	
    = clinic.text_field :laboratory_director
 %br

 %h3 Contact
 %table
  %tr
   %td.label 
    = clinic.label :phone
   %td.value	
    = clinic.text_field :phone
  %tr
   %td.label 
    = clinic.label :website
   %td.value	
    = clinic.text_field :website
  %tr
   %td.label 
    = clinic.label :email
   %td.value	
    = clinic.text_field :email
 %br

 %h3 Additional Information
 .info
  = clinic.text_area :info

 .button
  = clinic.submit :value => "Update Clinic Info"
	
